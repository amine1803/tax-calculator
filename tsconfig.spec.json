{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "jsx": "react-jsx",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "paths": {
      "@shared/*": [
        "shared/*"
      ],
      "@styles/*": [
        "styles/*"
      ],
      "@icons/*": [
        "assets/icons/*"
      ]
    },
    "types": [
      "@testing-library/jest-dom",
      "jest",
      "node",
      "node-fetch"
    ]
  },
  "include": [
    "src/**/*.test.(ts|tsx)",
    "src/*.d.ts"
  ]
}